                <h5 class="text-white mt-3 text-decoration-underline">SIGN IN</h5>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
            <label class="text-white">Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                    



                    
            <label class="text-white mt-1">Password</label>

                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                    





                    <div class="mt-2">
                        <input type="checkbox">
                        <label class="text-white mb-4">Remember Me</label>
                    </div>
                    <div class="mb-5">



                        <button type="submit" class="btn text-white btn-outline-secondary px-3">Forgot Password?</button>



